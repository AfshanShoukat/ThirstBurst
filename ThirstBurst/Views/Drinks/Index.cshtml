@model IEnumerable<ThirstBurst.Models.Drink>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@using Microsoft.AspNetCore.Identity


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <p>
        <a  asp-action="Create"><button class="btn btn-success"><span class="fa fa-plus-square"></span>Create New</button></a>
</p>}

<table class="table">
    <thead>
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Image_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Drink_Company.CompanyName)
            </th>
            <th>
                Variants
            </th>
                <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
               <img class="img-thumbnail" style="width:200px;height:250px;" src="@item.Image_url" alt="@item.Name" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Drink_Company.CompanyName)
            </td>
            <td>
                @foreach(var variants in ViewData["Variantss"] as List<Variants>)
                    {
                        foreach (var variantsofdrink in ViewData["VariantsofDrink"] as List<VariantsOfDrink>)
                        {
                            if (variants.Id == variantsofdrink.VariantId && item.Id == variantsofdrink.DrinkId)
                            {
                                <div id="variantBox">
                                    <span id="variantName">@variants.Variant_Name</span>
                                    <img id="variantImage" src="@variants.V_Image" alt="@variants.Variant_Name" />
                                </div>
                            }
                        }
                    }
            </td>
                    <td style="text-align:center;">
                        @if (User.IsInRole("Admin") && SignInManager.IsSignedIn(User)){
                       <a asp-action="Edit" asp-route-id="@item.Id"><span style="color: green;" class="fa fa-edit"></span></a>
                        <!--<a asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-info"></span></a> -->
                        <a asp-action="Delete" asp-route-id="@item.Id"><span style="color:red;" class="fa fa-trash"></span></a>
                        }
                        </td>
        </tr>
}
    </tbody>
</table>
