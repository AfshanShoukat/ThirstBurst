@model ThirstBurst.Models.Variants

@{
    ViewData["Title"] = "Delete";
}
<div>
<h1>Delete the Variant</h1>
<hr />
    @{
        List<VariantsOfDrink> drinkVariantss = ViewData["drinkVariantss"] as List<VariantsOfDrink>;
    }
    @if (drinkVariantss.Count == 0)
    {
        <h3>Are you sure you want to delete this?</h3>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Variant_Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Variant_Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.V_Image)
            </dt>
            <dd class = "col-sm-10">
                <img  style="width:100px;height:100px;border-radius:50%;" src="@Html.DisplayFor(model => model.V_Image)" />
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Release_Date)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Release_Date)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <h5 class="bg-warning" style="padding:5px; text-align:center;">Sorry! We cannot delete this Variant because This is registered as a Variant of Drink(s)</h5>
            <table style="text-align:center;">
                <thead>
                    <tr>
                        <th>Drink Name</th>
                        <th>Drink Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var drink in ViewData["drinks"] as List<Drink>)
                    {


                        foreach (var drinkVariants in drinkVariantss)
                        {
                            if (drink.Id == drinkVariants.DrinkId)
                            {
                                <tr>
                                    <td style="width:200px;">@drink.Name</td>
                                    <td><img style="width:200px;" src="@drink.Image_url" alt="@drink.Name" /></td>
                                </tr>
                            }
                        }

                    }
                </tbody>
            </table>
            <h5 class="bg-primary" style="padding:5px; text-align:center;">Please delete/update these Drinks before deletion of Variant.</h5>
    }
</div>
